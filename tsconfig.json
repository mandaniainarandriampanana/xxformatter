{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/__tests__"]
}
